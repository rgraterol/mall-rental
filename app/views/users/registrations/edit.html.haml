.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2
      Cambio de Contraseña
    %ol.breadcrumb
      %li
        = link_to 'Inicio', root_url
      %li
        = link_to 'Perfil', profile_path
      %li
        Cambio de Contraseña
.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-content
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal m-t-md" , id: 'edit_password_profile'}) do |f|
            = devise_error_messages!
            .form-group
              = f.label :current_password, "Contraseña Actual: ", class: "control-label col-sm-2"
              .col-sm-10
                = f.password_field :current_password, autocomplete: "off", class:"form-control"
            %hr/
            .form-group
              = f.label :password, "Nueva Contraseña", class: 'control-label col-sm-2'
              .col-sm-10
                = f.password_field :password, autocomplete: "off", class: 'form-control'
            .form-group
              = f.label :password_confirmation, "Vuelva a escribir la nueva contraseña", class: "control-label col-sm-2"
              .col-sm-10
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
            .form-group
              .col-sm-3.col-sm-offset-9
                = f.submit "Guardar", class: "btn btn-warning btn-block", data: { disable_with: "Guardar"}